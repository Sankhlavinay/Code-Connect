<div class="col-lg-6 mx-auto mt-5 mb-5">
  <div class="card">
    <div class="card-header">
      <h2 class="text-center card-title">Forgot your password?</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="form-group">
          <%= f.label :email, class: "mt-2" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
          <% if resource.errors[:email].present? %>
              <p class="text-danger"><%= resource.errors[:email].first %></p>
          <% end %>
        </div>

        <div class="actions mt-4">
          <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>



