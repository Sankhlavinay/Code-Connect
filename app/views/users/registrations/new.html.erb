<div class="col-lg-8 mx-auto mt-5 mb-5">
  <div class="card">
    <div class="card-header">
       <h2 class="text-center card-title">Sign up</h2>
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { turbo: false } }) do |f| %>

        <div class="form-group row">
          <div class="col-lg-6">
            <%= f.label :first_name, class: "mb-2" %>
            <%= f.text_field :first_name, class: "form-control" %>
            <% if resource.errors[:first_name].present? %>
              <p class="text-danger"><%= resource.errors[:first_name].first %></p>
            <% end %>
          </div>

          <div class="col-lg-6">
            <%= f.label :last_name, class: "mb-2" %>
            <%= f.text_field :last_name, class: "form-control" %>
            <% if resource.errors[:last_name].present? %>
              <p class="text-danger"><%= resource.errors[:last_name].first %></p>
            <% end %>
          </div>

          <div class="col-lg-6">
            <%= f.label :profile_title, class: "mb-2" %>
            <%= f.text_field :profile_title, class: "form-control" %>
            <% if resource.errors[:profile_title].present? %>
              <p class="text-danger"><%= resource.errors[:profile_title].first %></p>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-6">
            <%= f.label :email, class: "mb-2" %>
            <%= f.email_field :email, class: "form-control" %>
            <% if resource.errors[:email].present? %>
              <p class="text-danger"><%= resource.errors[:email].first %></p>
            <% end %>
          </div>

          <div class="col-lg-6">
            <%= f.label :username, class: "mb-2" %>
            <%= f.text_field :username, class: "form-control" %>
            <% if resource.errors[:username].present? %>
              <p class="text-danger"><%= resource.errors[:username].first %></p>
            <% end %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-6">
            <%= f.label :password, class: "mb-2" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password,  class: "form-control" %>
            <% if resource.errors[:password].present? %>
              <p class="text-danger"><%= resource.errors[:password].first %></p>
            <% end %>
          </div>

          <div class="col-lg-6">
            <%= f.label :confirm_password, class: "mb-2" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
            <% if resource.errors[:confirm_password].present? %>
              <p class="text-danger"><%= resource.errors[:confirm_password].first %></p>
            <% end %>
          </div>
        </div>

        <div class="actions mt-4">
          <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>



